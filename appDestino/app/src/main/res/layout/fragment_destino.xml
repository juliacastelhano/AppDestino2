<!--    </com.google.android.material.textfield.TextInputLayout>-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPrevisaoPartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#B5EAEA"
            android:fontFamily="sans-serif-black"
            android:hint="Previsão de Partida"
            android:inputType="date"
            android:textColorHint="#0F0F0F" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnFoto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:backgroundTint="#B5EAEA"
        android:fontFamily="sans-serif-black"
        android:text="Escolher Foto"
        android:textColor="#0F0F0F"
        android:textColorHint="#0F0F0F"
        android:textColorLink="#0F0F0F"
        android:textSize="16sp"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:backgroundTint="#1AA6B7"
        android:fontFamily="sans-serif-black"
        android:text="Salvar"
        android:textSize="16sp"
        app:cornerRadius="30dp" />

</LinearLayout>